<div class="container">

  <h2>Apply:</h2>
  <br>
  <form action="/visit" method="POST" role="form">

    <div class="form-group">
      <label>Your name</label>
      <input name="client[name]" type="text" class="form-control" value="<%=@c.name%>" placeholder="Name">
    </div>

    <div class="form-group">
      <label>Contact phone number</label>
      <input name="client[phones]" type="text" class="form-control" value="<%=@c.phones%>" placeholder="Phone">
    </div>

    <div class="form-group">
      <label>Date of visit</label>
      <input id="datetime" name="client[datestamp]" type="text" class="form-control" value="<%=@c.datestamp%>" placeholder="Date and time">
    </div>

    <div class="form-group">
      <label>Choose the master:</label>
      <select name="client[barber]" class="form-control">
        <%@masters.each do |master|%>
          <option <%= master.name == @c.barber ? "selected" : ""%>><%= master.name%></option>
        <% end%>
      </select>
    </div>

    <div>
      <select id="color" name="client[color]">
        <option value="#7bd148">Green</option>
        <option value="#5484ed">Bold blue</option>
        <option value="#a4bdfc">Blue</option>
        <option value="#46d6db">Turquoise</option>
        <option value="#7ae7bf">Light green</option>
        <option value="#51b749">Bold green</option>
        <option value="#fbd75b">Yellow</option>
        <option value="#ffb878">Orange</option>
        <option value="#ff887c">Red</option>
        <option value="#dc2127">Bold red</option>
        <option value="#dbadff">Purple</option>
        <option value="#e1e1e1">Gray</option>
      </select>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>

  </form>

  <script type="text/javascript">
  $('#color').simplecolorpicker();
  $('#datetime').datetimepicker({format:'d.m.Y H:i'});
  </script>
</div>
